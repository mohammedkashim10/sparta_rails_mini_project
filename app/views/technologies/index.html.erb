<div class="container">
<p id="notice"><%= notice %></p>

<h1>Technologies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Technology</th>
      <th>Date created</th>
      <th>Version</th>
      <th>Desc</th>
      <th>Logo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @technologies.each do |tech| %>
      <tr>
        <td><%= tech.technology %></td>
        <td><%= tech.date_created %></td>
        <td><%= tech.version %></td>
        <td><%= tech.desc %></td>
        <td><%= tech.logo %></td>
        <td><%= tech.user.first_name %></td>
        <td><%= link_to 'Show', tech , class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_technology_path(tech) , class: 'btn btn-info'%></td>
        <td><%= link_to 'Destroy', tech, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-info'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Tech', new_technology_path %>
</div>
